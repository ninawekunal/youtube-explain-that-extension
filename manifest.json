{
    "manifest_version": 3,
    "name": "YouTube ExplainThat Assistant",
    "version": "1.0",
    "description": "Ask for explanations while watching YouTube videos!",
    "permissions": ["scripting", "activeTab"],
    "host_permissions": ["https://www.youtube.com/*"],
    "content_scripts": [
      {
        "matches": ["https://www.youtube.com/*"],
        "js": ["content.js"]
      }
    ]
  }